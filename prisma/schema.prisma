// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  profile   Profile?
  profileId Int?
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  User   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}
